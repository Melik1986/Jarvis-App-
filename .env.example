# AXON â€” Environment Configuration
# Copy to .env and configure

# Backend URL for mobile client
# Local: http://192.168.x.x:5000 or http://localhost:5000
# Production: https://your-domain.com
EXPO_PUBLIC_DOMAIN=http://localhost:5000

# Environment mode (development | production)
NODE_ENV=development

# All other secrets (LLM keys, ERP credentials, Supabase, Qdrant, etc.)
# are configured via:
# - App UI: Settings screen, MCP Servers screen
# - Replit: Secrets panel
# - Hosting: Environment variables dashboard

# -----------------------------------------------------------------------------
# Security / Transport defaults
# -----------------------------------------------------------------------------

# Enforce signed mutating requests from mobile client
REQUEST_SIGNATURE_ENFORCE=true
# Allowed client/server clock skew for request signature (milliseconds)
REQUEST_SIGNATURE_MAX_SKEW_MS=60000

# Public HTTPS URL used for landing/manifest placeholders on server
PUBLIC_BASE_URL=https://your-app-domain.example

# Development-only insecure fallback for session/jwt secret generation
# Keep false in production
ALLOW_INSECURE_DEV_SECRETS=false

# -----------------------------------------------------------------------------
# MCP policy
# -----------------------------------------------------------------------------

# Dynamic MCP connect API is disabled by default (recommended for production)
MCP_DYNAMIC_CONNECT_ENABLED=false
# Comma-separated command allowlist for dynamic MCP connect (non-prod only)
MCP_ALLOWED_COMMANDS=
# Comma-separated env var allowlist passed to dynamic MCP processes
MCP_ALLOWED_ENV_KEYS=

# -----------------------------------------------------------------------------
# Skills runtime policy
# -----------------------------------------------------------------------------

# off | isolated
SKILL_RUNTIME_MODE=isolated
# Optional worker limits
SKILL_WORKER_TIMEOUT_MS=1500
SKILL_WORKER_MEMORY_MB=64
SKILL_WORKER_MAX_OUTPUT_BYTES=131072

# -----------------------------------------------------------------------------
# Outbound URL policy (LLM / ERP / OpenAPI / RAG)
# -----------------------------------------------------------------------------

# Enforce HTTPS for outbound requests
OUTBOUND_ENFORCE_HTTPS=true
# Block private/loopback/link-local addresses
OUTBOUND_BLOCK_PRIVATE_IPS=true
# Optional host allowlist (comma-separated). Empty means no host allowlist.
OUTBOUND_ALLOWED_HOSTS=

# Allow HTTP only in development when specific call sites permit it
AXON_ALLOW_CLEARTEXT_DEV=false
